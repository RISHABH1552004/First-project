<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/alert_dark_frame"
    android:orientation="vertical"
    tools:context=".Android">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35sp"
        android:textColor="@color/white"
        android:text="Machine Learning"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Concept and language you know"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textSize="15dp">

    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/dp"
            android:layout_width="180sp"
            android:layout_height="180sp"
            android:layout_margin="20sp"
            android:backgroundTint="#666666"
            app:cardCornerRadius="180sp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Deep Learning"
                android:textColor="@color/white"

                android:textSize="30sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ds"
            android:layout_width="180sp"
            android:layout_height="180sp"
            android:layout_marginTop="20sp"
            android:backgroundTint="#ff9900"
            app:cardCornerRadius="180sp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Data Science"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/nn"
            android:layout_width="180sp"
            android:layout_height="180sp"
            android:layout_margin="20sp"
            android:backgroundTint="@color/blue"
            app:cardCornerRadius="180sp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Neural Network"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/al"
            android:layout_width="180sp"
            android:layout_height="180sp"
            android:layout_marginTop="20sp"
            android:backgroundTint="@color/Rad"
            app:cardCornerRadius="180sp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Algorithm"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>