<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".new_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="30dp"
            >

            <TextView
                android:id="@+id/app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#66ffff"
                android:text="Android Devlopment"
                android:textAlignment="center"
                android:textSize="25dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="30dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black">

            <TextView
                android:id="@+id/web"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:text="Web Devlopment"
                android:textColor="#66ffff"
                android:textAlignment="center"
                android:textSize="25dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            app:cardCornerRadius="30dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black">

            <TextView
                android:id="@+id/ml"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textColor="#66ffff"
                android:layout_marginTop="15dp"
                android:text="Machine Learning"
                android:textAlignment="center"
                android:textSize="25dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="30dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black">

            <TextView
                android:id="@+id/da"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_marginTop="35dp"
                android:text="Data Analyst"
                android:textColor="#66ffff"
                android:textAlignment="center"
                android:textSize="25dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            app:cardCornerRadius="30dp"
            android:backgroundTint="@color/black">

            <TextView
                android:id="@+id/ai"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:text="Generative A.I"
                android:textAlignment="center"
                android:textColor="#66ffff"
                android:textSize="25dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            app:cardCornerRadius="30dp"
            android:backgroundTint="@color/black">

            <TextView
                android:id="@+id/dm"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:text="Data Marketing"
                android:textColor="#66ffff"
                android:textAlignment="center"
                android:textSize="25dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact US"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:backgroundTint="@color/black">

    </Button>

</LinearLayout>
